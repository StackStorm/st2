{
    "enabled": true,
    "trigger": {
        "type": "st2.webhook",
        "parameters": {
            "url": "person"
        }
    },
    "criteria": {
        "trigger.name": {
            "pattern": "Joe",
            "type": "equals"
        }
    },
    "action": {
        "action": "core.local",
        "parameters": {
            "cmd": "echo \"{{trigger}}\" >> /tmp/st2.persons.out"
        }
    },
    "name": "st2.person.joe"
}
