{
    "name": "st2.webhook-sample",
    "description": "Sample rule dumping webhook payload to a file.",

    "trigger": {
        "type": "st2.webhook",
        "parameters": {
            "url": "sample"
        }
    },

    "criteria": {
        "trigger.name": {
            "pattern": "Joe",
            "type": "equals"
         }
    },

    "action": {
        "ref": "core.local",
        "parameters": {
            "cmd": "echo \"{{trigger}}\" >> /tmp/st2.webhook-sample.out"
        }
    },

    "enabled": true
}
