{
    "name": "st2.person.joe",
    "description": "Sample rule dumping webhook payload to a file.",

    "trigger": {
        "type": "st2.webhook",
        "parameters": {
            "url": "person"
        }
    },

    "criteria": {
        "trigger.name": {
            "pattern": "Joe",
            "type": "equals"
         }
    },

    "action": {
        "name": "local",
        "parameters": {
            "cmd": "echo \"{{trigger}}\" >> /tmp/st2.persons.out"
        }
    },

    "enabled": true
}
